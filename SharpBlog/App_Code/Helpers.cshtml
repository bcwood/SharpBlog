@using System.Web.Mvc

@helper RenderTagLinks(List<string> tags, string separator)
{
    var Url = ((WebViewPage) PageContext.Page).Url;
    var Html = ((WebViewPage) PageContext.Page).Html;
    var tagLinks = new List<string>();

    foreach (string tag in tags)
    {
        string slug = tag.ToLower().Replace(" ", "-");
        string url = Url.RouteUrl("Tag", new { slug });
        tagLinks.Add($"<a href='{url}'>{tag}</a>");
    }
    
    @Html.Raw(string.Join(separator, tagLinks))
}
