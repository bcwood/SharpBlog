@using SharpBlog.Models
@{
    Post post = Page.Post;
}

<div class="post page">
    <header class="post-header">
        <h1 class="post-title">@post.Title</h1>
    </header><!-- .post-header -->

    <div class="post-content">
        @Html.Raw(post.Body)
    </div><!-- .post-content -->
</div><!-- .post -->
