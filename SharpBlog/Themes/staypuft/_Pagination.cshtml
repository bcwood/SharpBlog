<div class="pagination">
    @if (Functions.HasPrevPage())
    {
        <div class="newer-posts">
            <a href="@Functions.GetPrevPageUrl()">&larr; Prev</a>
        </div>
    }

    @if (Functions.HasNextPage())
    {
        <div class="older-posts">
            <a href="@Functions.GetNextPageUrl()">Next &rarr;</a>
        </div>
    }
</div>